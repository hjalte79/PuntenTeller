@model PuntenTeller.Models.SchoolClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SchoolClass</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.students)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.students)
                {
                <li>
                    <a asp-area="" asp-controller="Students" asp-action="Details" asp-route-id="@item.id">
                        @item.fullName
                    </a>
                </li>
                }
            </ul>
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
